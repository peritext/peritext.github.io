    "react-scroll-nav": "^1.1.5",
    "react-sticky": "^5.0.5",
    "redux": "^3.6.0",
    "reselect": "^2.5.4"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@robindemourat/eslint-config/es7",
      "@robindemourat/eslint-config/react"
    ]
  }

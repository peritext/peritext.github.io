    "addbuild": "git add build",
    "lint": "eslint src --fix"
  },
  "pre-commit": [
    "build",
    "addbuild"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peritext/peritext.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@robindemourat/eslint-config": "git+https://github.com/robindemourat/eslint-config",
    "kotatsu": "^0.14.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "eslint-plugin-react": "^6.3.0",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^2.0.0",
    "mocha": "^3.1.2",
    "node-sass": "^3.10.1",
    "pre-commit": "^1.1.3",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
